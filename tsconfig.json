{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "strictNullChecks": false,
    "target": "es5",
    "lib": [ "es6", "dom", "webworker", "scripthost" ]
  },
  "include": [
    "./typings/*.d.ts", "./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}